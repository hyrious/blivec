{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "useDefineForClassFields": false,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "types": ["node"],
    "strict": true,
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": false,
    "declaration": true,
    "outDir": "lib",
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  }
}
